@model GamesStudios.ViewModels.GameFormViewModel
@{
    ViewBag.Title = "GameForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Game</h2>

@using (Html.BeginForm("Save", "Games"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Game.Name)
        @Html.TextBoxFor(m => m.Game.Name, new { @class = "form-control" })
    </div> 
    <div class="form-group">
        @Html.LabelFor(m => m.Game.DownloadLink)
        @Html.TextBoxFor(m => m.Game.DownloadLink, new { @class = "form-control" })
    </div>   
    <div class="form-group">
        @Html.LabelFor(m => m.Game.DownloadLink)
        @Html.TextBoxFor(m => m.Game.DownloadLink, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Game.GenreId)
        @Html.DropDownListFor(m => m.Game.GenreId, new SelectList(Model.Genres, "Id", "Name"), "Select Genre", new { @class = "form-control" })
    </div>

    @Html.HiddenFor(m => m.Game.Id)
    <button type="submit" class="btn btn-primary">Save</button>
}

