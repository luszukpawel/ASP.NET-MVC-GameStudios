@model GamesStudios.ViewModels.GenreFormViewModel
@{
    ViewBag.Title = "GenreForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>GenreForm</h2>
@using (Html.BeginForm("Save", "Genres"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Genre.Name)
        @Html.TextBoxFor(m => m.Genre.Name, new {@class = "form-control"})
    </div>


    @Html.HiddenFor(m => m.Genre.Id)
    <button type="submit" class="btn btn-primary">Save</button>
}